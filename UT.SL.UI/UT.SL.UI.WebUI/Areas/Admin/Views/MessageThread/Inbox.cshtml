@using UT.SL.Helper
@using UT.SL.Security
@if (ViewBag.TopOrBottom == 1)
{
    <div class="notif-menu notif-menu-top" id="messageMenu1">
        <div style="width: 100%; height: 30px; top: 0; position: absolute">
            <div class="row">
                <div class="col-xs-10">
                    <h4> @UT.SL.Model.Resource.App_Common.Messages</h4>
                </div>
                <div class="col-xs-2">
                    <div style="font-size: 1.5em;">
                        @Ajax.AuthorizationActionLinkBootstrap(User.Identity.Name, 0, (int)UT.SL.Model.Enumeration.ObjectType.Message, "glyphicon glyphicon-plus", UT.SL.Model.Resource.App_Common.SendNewMessage, "Send", "Message", new { area = "Admin" },
                   new AjaxOptions()
                   {
                       HttpMethod = "GET",
                       InsertionMode = InsertionMode.Replace,
                       UpdateTargetId = "modalDialogContent1",
                       OnSuccess = "$('#modalDialog1').modal('show'); ",
                       LoadingElementId = "loadingAjax"
                   }, new { @class = "" }, null)
                    </div>
                </div>
            </div>
        </div>
        <div style="width:100%; height:85%; overflow:auto; overflow-y:scroll; margin-top:30px;">
            <div class="inboxmessages">

            </div>
            <div class="container-fluid inboxmessagesloading">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="messageDiv centerOne boldAndLarger" style="margin-top:5px;">
                            <span>
                                @UT.SL.Model.Resource.App_Common.Loading
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div style="width:100%; height:30px; bottom:0; position:absolute;">

        </div>
    </div>
}
else if (ViewBag.TopOrBottom == 2)
{
    <div class="notif-menu notif-menu-top2 leftOne" id="messageMenu2"  style="overflow:visible">
        <div style="width: 100%; height: 30px; top: 0; position: absolute">
            <div class="row">
                <div class="col-xs-10">
                    <div class="leftOne" style="overflow:visible">
                        <h4 class=""> @UT.SL.Model.Resource.App_Common.Messages</h4>
                    </div>
                </div>
                <div class="col-xs-2">
                    <div style="font-size: 1.5em; overflow: visible" class="leftOne">
                        @Ajax.AuthorizationActionLinkBootstrap(User.Identity.Name, 0, (int)UT.SL.Model.Enumeration.ObjectType.Message, "glyphicon glyphicon-plus", UT.SL.Model.Resource.App_Common.SendNewMessage, "Send", "Message", new { area = "Admin" },
                   new AjaxOptions()
                   {
                       HttpMethod = "GET",
                       InsertionMode = InsertionMode.Replace,
                       UpdateTargetId = "modalDialogContent1",
                       OnSuccess = "$('#modalDialog1').modal('show'); ",
                       LoadingElementId = "loadingAjax"
                   }, new { @class = "" }, null)
                    </div>
                </div>
            </div>
        </div>
        <div style="width:100%; height:85%; overflow:auto; overflow-y:scroll; margin-top:30px;">
            <div class="inboxmessages">

            </div>
            <div class="container-fluid inboxmessagesloading">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="messageDiv centerOne boldAndLarger" style="margin-top:5px;">
                            <span>
                                @UT.SL.Model.Resource.App_Common.Loading
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div style="width:100%; height:30px; bottom:0; position:absolute;">

        </div>
    </div>
}
