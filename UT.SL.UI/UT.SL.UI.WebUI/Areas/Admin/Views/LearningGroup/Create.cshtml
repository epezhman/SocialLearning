@using UT.SL.Helper
@using UT.SL.Security
@model FormModel<UT.SL.Data.LINQ.LearningGroup, SelectListItems>

@if (ViewBag.Panel != null)
{
    <div class="col-md-12">
        @using (Ajax.BeginForm("Create", new { }, new AjaxOptions()
{
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "SubmitResultE",
    HttpMethod = "POST",
    LoadingElementId = "loadingAjax",
    OnSuccess = "$('#groupManage').slideUp();$('#groupManage').html('')"
}, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="" id="SubmitResultE">
            </div>
            <div class="">
                <div class="form-group">
                    <label class="control-label col-sm-3" for="Title">@Html.LabelFor(model => model.FormObject.Title)</label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(model => model.FormObject.Title, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.FormObject.Title)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-9 col-sm-offset-3">
                        <input type="submit" value="@(UT.SL.Model.Resource.App_Common.Submit)" id="submit" class="btn btn-primary submit" />
                        <a href="javascript:void(0);" class="btn btn-default closeWindow" onclick="$('#groupManage').slideUp();">@UT.SL.Model.Resource.App_Common.Cancel</a>
                        @Html.HiddenFor(model => model.FormObject.CourseId)
                        <input type="hidden" name="panel" value="1" />
                    </div>
                </div>
            </div>
        }
        <script>
            $(function () {
                $.InitialComponents();
            });
        </script>
    </div>
}
else
{
    <div class="">
        @using (Ajax.BeginForm("Create", new { }, new AjaxOptions()
{
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "SubmitResultE",
    HttpMethod = "POST",
    LoadingElementId = "loadingAjax"
}, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="" id="SubmitResultE">
            </div>
            <div class="">
                <div class="form-group">
                    <label class="control-label col-sm-3" for="Title">@Html.LabelFor(model => model.FormObject.Title)</label>
                    <div class="col-sm-9">
                        @Html.TextBoxFor(model => model.FormObject.Title, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.FormObject.Title)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-9 col-sm-offset-3">
                        <input type="submit" value="@(UT.SL.Model.Resource.App_Common.Submit)" id="submit" class="btn btn-primary submit" />
                        <a href="javascript:void(0);" class="btn btn-default closeWindow" onclick="$(this).closest('.ui-dialog-content').dialog('close');">@UT.SL.Model.Resource.App_Common.Cancel</a>
                        @Html.HiddenFor(model => model.FormObject.CourseId)
                    </div>
                </div>
            </div>
        }
        <script>
            $(function () {
                $.InitialComponents();
            });
        </script>
    </div>
}
