@using UT.SL.Helper
@using UT.SL.Security
@using UT.SL.UI.WebUI
@model List<UT.SL.Data.LINQ.SurveyAnswer>
@if (Model.Any())
{

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover table-condensed">
            <thead>
                <tr>
                    <th colspan="2">
                        @Html.Action("GetUserProfileLink", "App_User", new { area = "Admin", Id = Model.First().UserId, type = (int)UT.SL.Model.Enumeration.ProfileLinkType.FullName })
                        -
                        @Model.First().Survey.Title
                        -
                        @if (ViewBag.SubmitDate != null)
                        {
                            @HelperUtils.LocalizedDate(ViewBag.SubmitDate)
                        }
                    </th>
                </tr>
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        @(UT.SL.Model.Resource.App_Common.Answer)
                    </th>
                </tr>
            </thead>
            <tbody id="art_ls">
                @foreach (var item in Model)
                {
                    int j = 0;
                    <tr>
                        <td>
                            @item.QuestionId
                        </td>
                        <td>
                            @item.AnswerValue
                        </td>

                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="2"></td>
                </tr>
            </tfoot>
        </table>
    </div>
}
else
{
    <span></span>
}