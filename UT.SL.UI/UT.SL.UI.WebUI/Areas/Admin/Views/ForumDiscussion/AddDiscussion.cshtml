@using UT.SL.Helper
@using UT.SL.Security
@model UT.SL.Data.LINQ.Forum

<div class="paleIt" style="display: inline-block; margin-left: 3px; margin-right: 3px">
    @Ajax.AuthorizationActionLinkBootstrap(User.Identity.Name, Model.Id, (int)UT.SL.Model.Enumeration.ObjectType.Forum, "glyphicon glyphicon-plus", UT.SL.Model.Resource.App_Common.NewDiscussion, "NewDiscussion", "ForumDiscussion", new { area = "admin", Id = Model.Id },
                   new AjaxOptions()
                   {
                       HttpMethod = "GET",
                       InsertionMode = InsertionMode.Replace,
                       UpdateTargetId = "NewDiscussionViewFooter" + (int)UT.SL.Model.Enumeration.ObjectType.Forum + Model.Id,
                       OnSuccess = "$('#NewDiscussionViewFooter" + (int)UT.SL.Model.Enumeration.ObjectType.Forum + Model.Id + "').show('blind', 1000);",
                       LoadingElementId = "loadingAjax"
                   }, new { @class = "adddiscussion " }, Model.ForumDiscussions.Where(x => !x.ParentId.HasValue).Count().ToString())
</div>
