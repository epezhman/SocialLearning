                                <tr>
                                    <td></td>
                                    <td>
                                        @Html.Action("FileContentPreview", "FileAnnotation", new { area = "Admin", objectId = Model.Discussion.Id, type = (int)UT.SL.Model.Enumeration.ObjectType.ForumDiscussion })

                                    </td>
                                </tr>
                            }
