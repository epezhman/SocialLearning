                                                }
                                            </div>
                                            @*<div class="inline" id="allPostsCount@(Model.Discussion.Id)">
                                                    @Html.Action("DiscussionPostsCount", "ForumDiscussionPost", new { area = "Admin", id = Model.Discussion.Id })
                                                </div>*@
