@using UT.SL.Helper
@using UT.SL.Security
@model UT.SL.Data.LINQ.CourseSchedule
<div class="">
    @using (Ajax.BeginForm("EditSummary", new { }, new AjaxOptions()
{
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "SubmitResultCC",
    HttpMethod = "POST",
    LoadingElementId = "loadingAjax"
}, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()  
        @Html.ValidationSummary(true)    
        <fieldset>
            <legend>@UT.SL.Model.Resource.App_Common.EditPage</legend>
            <div class="" id="SubmitResultCC">
            </div>
            <div class="">

                <div class="form-group">
                    <label class="control-label" for="About">@Html.LabelFor(model => model.Summary)</label>
                    <div class="controls">
                        @Html.EditorFor(model => model.Summary)
                    </div>
                    <div class="controls">
                        @Html.ValidationMessageFor(model => model.Summary)
                    </div>
                </div>
                <div class="form-group">
                    <div class="controls">
                        <input type="submit" value="@(UT.SL.Model.Resource.App_Common.Submit)" id="submit"  class="btn btn-default btn btn-default-default submit"/>
                        @Html.HiddenFor(model => model.Id)
                        <input type="reset" value="@(UT.SL.Model.Resource.App_Common.Reset)"  id="reset" class="btn btn-default btn btn-default-default reset"/>
                        <a href="javascript:void(0);" class="btn btn-default btn btn-default-default closeWindow" onclick="$(this).closest('.ui-dialog-content').dialog('close');">@UT.SL.Model.Resource.App_Common.CloseWindow</a>
                    </div>
                </div>
            </div>
        </fieldset>
    }
    <script>
        $(function () {
            $.InitialComponents();
            $("#Summary").kendoEditor();
        });
    </script>
</div>
