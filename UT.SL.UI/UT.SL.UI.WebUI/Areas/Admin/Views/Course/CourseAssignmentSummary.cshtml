@using UT.SL.Helper
@using UT.SL.Security
@model PagedList<UT.SL.Data.LINQ.Assignment>
@{
    int i = Model.PagingItem.PageIndex * Model.PagingItem.PageSize;
    PagingItems sobj = Model.PagingItem;
    int ix = sobj.PageIndex;
}
<div class="table-responsive">
    <table class="table table-striped table-hover table-condensed">
        <thead>
            <tr>
                <th colspan="5">
                    @if (ViewBag.Title != null)
                    {
                        @(string.Format("{0} {1}", UT.SL.Model.Resource.App_Common.Assignments, ViewBag.Title))
                    }
                </th>
            </tr>
        </thead>
        <tbody id="art_ls">
            @foreach (var item in Model)
            {
                i++;
                int j = 0;
                <tr>
                    <td>
                        @i
                    </td>
                    <td>
                        @Ajax.AuthorizationActionLink(User.Identity.Name, HelperUtils.ShortenStringForPreview(item.Title, item.Body, item.FileTitle).ToString(), "GetOneObject", "Course", new { area = "Admin", id = item.Id, type = (int)UT.SL.Model.Enumeration.ObjectType.Assignment },
                                     new AjaxOptions
                                         {
                                             HttpMethod = "GET",
                                             InsertionMode = InsertionMode.Replace,
                                             UpdateTargetId = "previewOneItemArea",
                                             OnSuccess = "$('#postItemsArea').slideUp(500, function(){ $('#previewOneItemArea').slideDown(500); });",
                                             LoadingElementId = "loadingAjax"
                                         }, new { title = HelperUtils.ShortenStringForTitle(item.Title, item.Body, item.FileTitle) })


                    </td>
                    <td>
                        <span class="badge" data-toggle="tooltip" title="@UT.SL.Model.Resource.App_Common.SubmissionsCount">@item.AssignmentSubmissions.Count</span>
                    </td>
                    <td>
                        @if (item.App_User != null)
                        {
                            @Html.Action("GetUserPic", "App_User", new { area = "admin", Id = item.CreateUserId, type = (int)UT.SL.Model.Enumeration.ImageSizeType.GetPanelPic })
                        }
                    </td>
                    <td class="hidden-xs feedDivLessImportant paleIt">
                        <span>
                            @HelperUtils.ShowRecentTime(item.CreateDate)
                        </span>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="5">
                    <span>@UT.SL.Model.Resource.App_Common.NumOfAll : @Model.PagingItem.TotalItemCount</span>
                    @UT.SL.Model.Resource.App_Common.Page @(ix + 1)
                    @UT.SL.Model.Resource.App_Common.From @Model.PagingItem.TotalPageCount

                    <div class="divHeight30">
                        <ul class="pagination pagination-sm marginPaging">
                            @{
                                var start = ix;
                                if (start > 0)
                                {
                                    int c = 0;
                                    while (start > 0 && c < 4)
                                    {
                                        c++;
                                        start--;
                                    }
                                }
                                if (ix != 0)
                                {
                                    sobj.PageIndex = 0;
                                    <li>
                                        @Ajax.ActionLink("<< ", "CourseAssignmentSummary", "Course", sobj,
                            new AjaxOptions
                            {
                                UpdateTargetId = "assignmentResult",
                                HttpMethod = "post",
                                InsertionMode = InsertionMode.Replace,
                                LoadingElementId = "loadingAjax"
                            }
                            , new { id = "First" })
                                    </li>
                                }
                                for (int j = start; j < Model.PagingItem.TotalPageCount && j < start + 10; j++)
                                {
                                    if (ix != j)
                                    {
                                        sobj.PageIndex = j;
                                        <li>
                                            @Ajax.ActionLink((j + 1).ToString(), "CourseAssignmentSummary", "Course", sobj,
                            new AjaxOptions
                            {
                                UpdateTargetId = "assignmentResult",
                                HttpMethod = "post",
                                InsertionMode = InsertionMode.Replace,
                                LoadingElementId = "loadingAjax"
                            }
                            , new { })
                                        </li>
                                    }
                                    else
                                    {
                                        <li class="active"><a href="javascript:void(0);">@(j + 1)</a> </li>
                                    }
                                }
                                if (start + 9 < Model.PagingItem.TotalPageCount)
                                {
                                    <li>
                                        @Ajax.ActionLink(" >>", "CourseAssignmentSummary", "Course", sobj,
                            new AjaxOptions
                            {
                                UpdateTargetId = "assignmentResult",
                                HttpMethod = "post",
                                InsertionMode = InsertionMode.Replace,
                                LoadingElementId = "loadingAjax"
                            }
                            , new { id = "Last" })
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                </td>
            </tr>
        </tfoot>
    </table>
</div>
