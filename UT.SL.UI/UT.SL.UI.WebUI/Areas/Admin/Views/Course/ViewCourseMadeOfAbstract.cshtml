@using UT.SL.Helper
@using UT.SL.Security
@model FormModel<UT.SL.Data.LINQ.Course, SelectListItems>
<div class="">
    <fieldset class="form-horizontal">
        <legend>@UT.SL.Model.Resource.App_Common.ViewPage</legend>
        <div class="">
            <div class="form-group">
                <label class="control-label" for="">@UT.SL.Model.Resource.App_Common.Category</label>
                <div class="controls">
                    @Model.ExtraData.First().ToString()
                </div>
                <div class="controls">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label" for="">@UT.SL.Model.Resource.App_Common.Topics</label>
                <div class="controls">
                    @if (Model.ExtraKnownData != null && Model.ExtraKnownData.Items != null)
                    {
                        foreach (var item in Model.ExtraKnownData.Items)
                        { 
                        <span class="label label-default label-info">@item.Text</span>
                        }
                    }
                </div>
                <div class="controls">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label" for="">@Html.LabelFor(model => model.FormObject.Title)</label>
                <div class="controls readonly">
                    @Html.DisplayFor(model => model.FormObject.Title)
                </div>
            </div>
            <div class="form-group">
                <label class="control-label" for="">@Html.LabelFor(model => model.FormObject.About)</label>
                <div class="controls readonly">
                    @Html.Raw(HttpUtility.HtmlDecode(Model.FormObject.About))
                </div>
            </div>
            <div class="form-group">
                <label class="control-label" for="">@Html.LabelFor(model => model.FormObject.StartDate)</label>
                <div class="controls readonly">
                    @HelperUtils.LocalizedDate(Model.FormObject.StartDate)
                </div>
            </div>
            <div class="form-group">
                <label class="control-label" for="">@Html.LabelFor(model => model.FormObject.EndDate)</label>
                <div class="controls readonly">
                    @HelperUtils.LocalizedDate(Model.FormObject.EndDate)
                </div>
            </div>
        </div>
    </fieldset>
    <script>
        $(function () {
            $.InitialComponents();
        });
    </script>
</div>
