@using UT.SL.Helper
@using UT.SL.Security
@if (ViewBag.TopOrBottom == 1)
{
    <div class="notif-menu notif-menu-top" id="notificationMenu1">
        <div style="width: 100%; height: 30px; top: 0; position: absolute">
            <div class="row">
                <div class="col-xs-6 ">
                    <h4> @UT.SL.Model.Resource.App_Common.Notifications</h4>
                </div>
                <div class="col-xs-6">
                    <h4>
                        @Html.ActionLink("See All", "SeeAll", "Notification", new { Area = "Admin" }, null)
                    </h4>
                </div>
            </div>
        </div>
        <div style="width:100%; height:85%; overflow:auto; overflow-y:scroll; margin-top:30px;">
            <div class="notifmessages">

            </div>
            <div class="container-fluid notifmessagesloading">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="messageDiv centerOne boldAndLarger" style="margin-top:5px;">
                            <span>
                                @UT.SL.Model.Resource.App_Common.Loading
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div style="width:100%; height:30px; bottom:0; position:absolute;">
        </div>
    </div>
}
else if (ViewBag.TopOrBottom == 2)
{
    <div class="notif-menu notif-menu-top2 leftOne" id="notificationMenu2" style="overflow: visible;">
        <div style="width: 100%; height: 30px; top: 0; position: absolute">
            <div class="row">
                <div class="col-xs-6 ">
                    <div class="leftOne" style="overflow:visible">
                        <h4 class=""> @UT.SL.Model.Resource.App_Common.Notifications</h4>
                    </div>
                </div>
                <div class="col-xs-6">
                    <h4 class=""> @Html.ActionLink("See All", "SeeAll", "Notification", new { Area = "Admin" }, null)</h4>
                </div>
            </div>
        </div>
        <div style="width:100%; height:85%; overflow:auto; overflow-y:scroll; margin-top:30px;">
            <div class="notifmessages">

            </div>
            <div class="container-fluid notifmessagesloading">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="messageDiv centerOne boldAndLarger" style="margin-top:5px;">
                            <span>
                                @UT.SL.Model.Resource.App_Common.Loading
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div style="width:100%; height:30px; bottom:0; position:absolute;">
        </div>
    </div>
}
