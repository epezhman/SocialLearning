@using UT.SL.Helper
@using UT.SL.Security
@model UT.SL.Data.LINQ.Feedback
<div class="">
    @using (Ajax.BeginForm("Delete", new { },
    new AjaxOptions()
    {
        Confirm = UT.SL.Model.Resource.App_Common.AreYouSure,
        HttpMethod = "POST",
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "SubmitResult",
        LoadingElementId = "loadingAjax"
    }, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="" id="SubmitResult">
        </div>
        <div class="">
            <div class="form-group">
                <label class="control-label col-sm-3" for="Title">@Html.LabelFor(model => model.PageURL)</label>
                <div class="col-sm-9 readonly">
                    @Html.DisplayFor(model => model.PageURL)
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-3" for="CorrectAnsver">@Html.LabelFor(model => model.Feedback1)</label>
                <div class="col-sm-9 readonly">
                    @Html.DisplayFor(model => model.Feedback1)
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    <input type="submit" value="@(UT.SL.Model.Resource.App_Common.Submit)" id="submit" class="btn btn-primary" />
                    <a href="javascript:void(0);" class="btn btn-default closeWindow" onclick="$(this).closest('.ui-dialog-content').dialog('close');">@UT.SL.Model.Resource.App_Common.CloseWindow</a>
                    @Html.HiddenFor(model => model.Id)
                </div>
            </div>
        </div>
    }
</div>
