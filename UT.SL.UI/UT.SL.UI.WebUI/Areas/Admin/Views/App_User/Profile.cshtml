@using UT.SL.Helper
@using UT.SL.Security
@model UT.SL.Data.LINQ.App_User
@{
    ViewBag.Title = UT.SL.Model.Resource.App_Common.Profile;
}
@section TopLinks{
    @Html.Action("TopMenuLinks", "Home", new { area = "", menuType = (int)UT.SL.Model.Enumeration.MenuType.UserProfile, extra = Model.Id , guid = Model.GuidId })
}

<div class="utwell">
    <div class="row">
        <div class="col-xs-2">
            @Html.Action("GetUserPic", "App_User", new { area = "admin", Id = Model.Id, type = (int)UT.SL.Model.Enumeration.ImageSizeType.Large })
        </div>
        <div class="col-xs-10">
            <div class="row">
                <div class="col-md-12">
                    @Html.Action("ProfileDetails", "App_User", new { area = "admin", Id = Model.GuidId })
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="paddingIt">
                        @if (ViewBag.ShowAccountOptions != null)
                        {
                            <div class="inline">

                                @Ajax.ActionLink(UT.SL.Model.Resource.App_Common.EditProfile, "EditProfile", "App_User", new { area = "admin", id = Model.GuidId },
                        new AjaxOptions
                            {
                                HttpMethod = "GET",
                                InsertionMode = InsertionMode.Replace,
                                UpdateTargetId = "dialog",
                                OnSuccess = "$.DialogOpen('dialog','" + UT.SL.Model.Resource.App_Common.EditProfile + "') ",
                                LoadingElementId = "loadingAjax"
                            }, new { @class = "btn btn-default" })
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>    
</div>
