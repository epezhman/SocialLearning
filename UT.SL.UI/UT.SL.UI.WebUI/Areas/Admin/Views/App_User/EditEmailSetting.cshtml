@using UT.SL.Helper
@using UT.SL.Security
@model  UT.SL.Data.LINQ.App_UserProfile
<div class="">
    @using (Ajax.BeginForm("EditEmailSetting", new { }, new AjaxOptions()
{
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "SubmitResultE",
    HttpMethod = "POST",
    LoadingElementId = "loadingAjax"
}, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
    <div class="" id="SubmitResultE">
    </div>
        <div class="">
            <div class="form-group">
                <label class="control-label col-sm-3" for="IsActive">@Html.LabelFor(model => model.GetUnreadenMessagesEmail)</label>
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.GetUnreadenMessagesEmail)
                    @Html.ValidationMessageFor(model => model.GetUnreadenMessagesEmail)
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-3" for="IsActive">@Html.LabelFor(model => model.GetNotificationEmails)</label>
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.GetNotificationEmails)
                    @Html.ValidationMessageFor(model => model.GetNotificationEmails)
                </div>
            </div>
            <div class="form-group">
                <div class="controls" style="padding:0px 15px 0px 15px;">
                    <input type="submit" value="@(UT.SL.Model.Resource.App_Common.Submit)" id="submit" class="btn btn-default submit" />
                    @Html.HiddenFor(model => model.Guid)
                </div>
            </div>
        </div>
    }
    <script>
        $(function () {
            $.InitialComponents();
        });
    </script>
</div>
