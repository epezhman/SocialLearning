@model UT.SL.Data.LINQ.App_User
@if (ViewBag.Type == (int)UT.SL.Model.Enumeration.ImageSizeType.Large)
{
    if (Model.UserPic != null)
    {
            <img class="userPicLarge img-thumbnail" src="@Url.Action("ViewUserPic", "App_User", new { area = "admin", id = Model.GuidId })" alt="" title="@string.Format("{0} {1}", Model.FirstName, Model.LastName)" />
    }
    else
    {
            <img class="userPicLarge img-thumbnail" src="@Url.Content("~/Images/content/default_avatar.png")" alt="" title="@string.Format("{0} {1}", Model.FirstName, Model.LastName)" />
    }
}
