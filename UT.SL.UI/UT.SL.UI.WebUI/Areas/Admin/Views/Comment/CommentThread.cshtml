@using UT.SL.Helper
@using UT.SL.Security
@model  FormModel<List<UT.SL.Data.LINQ.Comment>, UT.SL.Model.ObjectViewModel>

<div class="">
    @if (Model.FormObject.Count < 5)
    {
        for (int i = 0; i < Model.FormObject.Count - 1; i++)
