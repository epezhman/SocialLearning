@using UT.SL.Helper
@using UT.SL.Security
@model UT.SL.Model.ObjectModel

<div class="paleIt" style="display: inline-block; margin-left: 2px; margin-right: 2px;">
    @Ajax.AuthorizationActionLinkBootstrap(User.Identity.Name, Model.ObjectId, Model.Type, "glyphicon glyphicon-share", UT.SL.Model.Resource.App_Common.Share, "Share", "Share", new { area = "admin", objectId = Model.ObjectId, type = Model.Type, viewType = 1 },
                   new AjaxOptions()
                   {
                       HttpMethod = "GET",
                       InsertionMode = InsertionMode.Replace,
                       UpdateTargetId = "ShareFooter" + Model.Type + Model.ObjectId,
                       OnSuccess = "$('#ShareFooter" + Model.Type + Model.ObjectId + "').show('blind', 1000);",
                       LoadingElementId = "loadingAjax"
                   }, new { @class = "share " }, null)
</div>

