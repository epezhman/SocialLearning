@using UT.SL.Helper
@using UT.SL.Security
@model UT.SL.Model.ObjectModel
<div id="tag@(Model.Type)@(Model.ObjectId)"  class="tag@(Model.Type)@(Model.ObjectId)" style="display:inline-block;margin-left:3px; margin-right:3px">
    @Ajax.AuthorizationActionLinkBootstrap(User.Identity.Name, Model.ObjectId, Model.Type, "glyphicon glyphicon-tags", UT.SL.Model.Resource.App_Common.Tags, "Tag", "TagMapper", new { area = "admin", objectId = Model.ObjectId, type = Model.Type },
                   new AjaxOptions()
                   {
                       HttpMethod = "GET",
                       InsertionMode = InsertionMode.Replace,
                       UpdateTargetId = "tagDialog",
                       OnSuccess = "$.DialogOpen('tagDialog','" + UT.SL.Model.Resource.App_Common.Tags + "') ",
                       LoadingElementId = "loadingAjax"
                   }, new { @class = "tag" }, Model.Count.ToString())
</div>
