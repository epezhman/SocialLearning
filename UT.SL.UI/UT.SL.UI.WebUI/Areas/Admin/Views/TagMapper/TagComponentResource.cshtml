@using UT.SL.Helper
@using UT.SL.Security
@model UT.SL.Model.ObjectModel
<div class="tag@(Model.Type)@(Model.ObjectId)" style="display:inline-block; margin-left:2px; margin-right:2px">
    <div class="@(Model.IsNew ? "paleItNew" : "paleIt")" id="tag@(Model.Type)@(Model.ObjectId)">
        @Ajax.AuthorizationActionLinkBootstrap(User.Identity.Name, Model.ObjectId, Model.Type, "glyphicon glyphicon-tags", UT.SL.Model.Resource.App_Common.Tags, "Tag", "TagMapper", new { area = "admin", objectId = Model.ObjectId, type = Model.Type, viewType = Model.ViewType = 1, tagType = ViewBag.TagType != null ? ViewBag.TagType : 0 },
                   new AjaxOptions()
                   {
                       HttpMethod = "GET",
                       InsertionMode = InsertionMode.Replace,
                       UpdateTargetId = "TagViewFooter" + Model.Type + Model.ObjectId,
                       OnSuccess = "$('#TagViewFooter" + Model.Type + Model.ObjectId + "').show('blind', 1000);$('#TagsFooter" + Model.Type + Model.ObjectId + "').hide();",
                       LoadingElementId = "loadingAjax"
                   }, new { @class = "tag" }, Model.Count.ToString())
    </div>
</div>
