                <label class="control-label" for="">@Html.LabelFor(model => model.FormObject.Tags)</label>
                <div class="controls">
                    @Html.TextBoxFor(model => model.FormObject.Tags, new { data_lookupurl = Url.Action("GetTags", "TagMapper", new { area = "Admin" }), data_autocomplete = "true", @class = "input-xxlarge", style = "width:400px;" })
                </div>
                <div class="controls">
                    @Html.ValidationMessageFor(model => model.FormObject.Tags)
                </div>
            </div>
            <div class="form-group">
                <div class="controls">
                    <input type="submit" value="@(UT.SL.Model.Resource.App_Common.Submit)" id="submit" class="btn btn-primary btn-sm submit" />
                    <a href="javascript:void(0);" class="btn btn-default bt-sm closeWindow" onclick="$(this).closest('.ui-dialog-content').dialog('close');">@UT.SL.Model.Resource.App_Common.CloseWindow</a>
