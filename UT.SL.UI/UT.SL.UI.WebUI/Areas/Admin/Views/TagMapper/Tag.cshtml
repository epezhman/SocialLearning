                    @Html.Action("TagsForViewAndDelete", "TagMapper", new { area = "Admin", objectId = Model.ExtraKnownData.Id, objectType = Model.ExtraKnownData.Type, tagType = (ViewBag.TagType == 0 || ViewBag.TagType == null) ? 0 : 2 })
                </div>
            </div>

